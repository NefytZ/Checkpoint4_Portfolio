{% extends 'base.html.twig' %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div class="containerhello d-flex justify-content-center">
		<div class="title fs-3 pt-5 m-5">Bienvenue Thyphen</div>
		</div>
	<div class="container d-flex justify-content-center align-items-center mt-5 gap-3">
	<form class="form" action="{{ path('app_login') }}" method="post">
		<div class="mb-3 p-2">
		<label for="username" class="form-label text-light fs-3">Email:</label>
		<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
		</div>
		<div class="mb-3 p-2">
		<label for="password" class="form-label text-light fs-3">Password:</label>
		<input type="password" class="form-control" id="password" name="_password">
		</div>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<input type="hidden" name="app_admin" value="/account">
		<div class="mb-3 d-flex">
		<button type="submit" class="btn btn-secondary justify-content-center m-auto">Login</button>
		</div>
	</div>
	</form>
{% endblock %}


