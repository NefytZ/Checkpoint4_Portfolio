{% extends 'base.html.twig' %}

{% block title %}Mes Projets{% endblock %}

{% block body %}
<div class="container my-5">
    <h2 class="text-center font-weight-bold">Mes Projets</h2>
    <div class="row">
      {% for project in projects %}
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img class="card-img-top" src="{{ project.projectPicture}}" alt="{{ project.titre }}">
          <div class="card-body">
            <h4 class="card-title">{{ project.titre }}</h4>
            <p class="card-text">{{ project.description }}</p>
          </div>
          <div class="card-footer">
            <a href="{{ project.url }}" class="btn btn-primary btn-sm">En savoir plus</a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
