{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>NomEtablissement</th>
                <td>{{ formation.NomEtablissement }}</td>
            </tr>
            <tr>
                <th>Diplome</th>
                <td>{{ formation.Diplome }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ formation.DateDebut ? formation.DateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ formation.DateFin ? formation.DateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ formation.Description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_formation_index') }}">back to list</a>

    <a href="{{ path('app_admin_formation_edit', {'id': formation.id}) }}">edit</a>

